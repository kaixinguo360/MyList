<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.list.domain.UserMapper">
  <resultMap id="BaseResultMap" type="com.my.list.domain.User">
    <id column="id" jdbcType="BIGINT" property="id"/>
    <result column="user_name" jdbcType="VARCHAR" property="name"/>
    <result column="user_pass" jdbcType="VARCHAR" property="pass"/>
    <result column="user_email" jdbcType="VARCHAR" property="email"/>
    <result column="user_status" jdbcType="VARCHAR" property="status"/>
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete
    from users
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.my.list.domain.User" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
    insert into users (id, user_name, user_pass,
                       user_email, user_status)
    values (#{id,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{pass,jdbcType=VARCHAR},
            #{email,jdbcType=VARCHAR}, #{status,jdbcType=VARCHAR})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.my.list.domain.User">
    update users
    set user_name   = #{name,jdbcType=VARCHAR},
        user_pass   = #{pass,jdbcType=VARCHAR},
        user_email  = #{email,jdbcType=VARCHAR},
        user_status = #{status,jdbcType=VARCHAR}
    where id = #{id,jdbcType=BIGINT}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select * from users
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select * from users
  </select>
  <select id="selectByNameAndPass" resultMap="BaseResultMap">
    SELECT *
    FROM users
    WHERE user_name = #{name}
      AND user_pass = #{pass}
  </select>
</mapper>
